todo-item
  .todo
    height 65px
    padding 20px
    display flex
    position relative
    flex-direction row
    align-items center
    box-sizing border-box
    justify-content space-between
    border-bottom 1px solid #21212122

    input[type=checkbox]
      left -100%
      position absolute

      &+label
        display flex
        cursor pointer
        position relative
        align-items center
        flex-direction row
        max-width calc(100% - 25px)

        h4
          margin 0
          overflow hidden
          white-space nowrap
          text-overflow ellipsis

        &::before, &::after
          content ''


        &::before
          width 25px
          height 25px
          display flex
          margin-right 25px
          background-color rgba(41, 41, 41, 0.15)

        &::after
          top 5px
          left 9px
          width 5px
          height 10px
          display none
          position absolute
          border 1px solid #f1f1f1
          border-width 0 3px 3px 0

          transform rotate(45deg)

        &:hover
          &::before
            background-color rgba(41, 41, 41, 0.20)



      &:checked+label
        &::after
          display: flex;

    .svg-icon
      display none

    &:hover
      .svg-icon
        display flex

