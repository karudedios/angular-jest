create-todo-item
  height 64px
  display flex
  flex-direction column
  justify-content center
  border-bottom 1px solid #21212122

  form
    margin 0

    input
      border 0
      width 100%
      height 35px
      outline none
      font-size 16px
      font-weight 700
      padding 2px 20px
      box-sizing border-box
      background-color transparent
      font-family "Roboto" sans-serif

      &::placeholder
        color #21212166
